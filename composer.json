{
    "name": "enobrev/php-orm",
    "license": "MIT",
    "version": "0.9.0-dev",
    "type": "library",
    "description": "Simple ORM",
    "authors": [
        {
            "name": "Mark Armendariz",
            "email": "src@enobrev.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/enobrev/php-tools"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/enobrev/php-orm"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-readline": "*",
        "adbario/php-dot-notation": "^2.2",
        "enobrev/php-tools": "dev-master",
        "moneyphp/money": "^3.1",
        "twig/twig": "^2.9",
        "vanilla/garden-cli": "^2.2"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Enobrev\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Enobrev\\ORM\\Mock\\Table\\": "tests/Mock/Table",
            "Enobrev\\ORM\\Mock\\": "tests/Mock/"
        }
    },
    "bin": [
        "bin/generate_tables.php",
        "bin/sql_to_json.php"
    ]
}
